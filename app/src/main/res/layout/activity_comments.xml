<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mircea.instaapp.CommentsActivity">

    <ListView
        android:id="@+id/commentsList"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/commentsList"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Write the message here"
        android:inputType="textShortMessage|textLongMessage" />

    <ImageView
        android:id="@+id/miniProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentsList"
        android:layout_toStartOf="@+id/commentEditText"
        app:srcCompat="@drawable/instagram_default2" />

    <Button
        android:id="@+id/postCommentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentsList"
        android:layout_toEndOf="@+id/commentEditText"
        android:background="#FFF"
        android:text="Post"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>
