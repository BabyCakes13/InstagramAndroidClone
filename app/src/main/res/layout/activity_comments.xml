<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mircea.instaapp.Activities.CommentsActivity">

    <ListView
        android:id="@+id/commentsList"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:layout_below="@+id/commentsList"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/miniProfilePicture"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Write the message here"
        android:inputType="textShortMessage|textLongMessage" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/miniProfilePicture"
        android:layout_width="65dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/commentsList"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/instagram_default2"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <Button
        android:id="@+id/postCommentButton"
        android:layout_width="65dp"
        android:layout_height="75dp"
        android:layout_below="@+id/commentsList"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/commentEditText"
        android:background="#FFF"
        android:text="Post"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>
